get-button "Open Perspective" | click
with [get-window "Open Perspective"] {
    get-table | select Git
    get-button OK | click
}
get-view "Git Repositories" | get-link "Clone a Git repository" | click
with [get-window "Clone Git Repository"] {
    get-tree | select "Clone URI"
    get-button "Next >" | click
    get-group Location | get-editbox -after [get-label "URI:"] | set-text "file:///workdir/eclipse-crops/.git"
    get-button "Next >" | click
    get-button "Next >" | click
    get-button Finish | click
}
// wait for git clone
try -times 100 -delay 200 -command {
	get-view "Git Repositories" | get-tree 
    	| select "eclipse-crops [master] - \\/home\\/rcpttuser\\/git\\/eclipse-crops\\/.git/Working Tree - \\/home\\/rcpttuser\\/git\\/eclipse-crops"
}
